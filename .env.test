# Must always set to production
# @see {@link https://www.youtube.com/watch?v=HMM7GJC5E2o}
NODE_ENV=production

# Server
FASTIFY_CLOSE_GRACE_DELAY=1000
LOG_LEVEL=info

# Security
RATE_LIMIT_MAX=4 # 4 is for tests, increase if you need more
ORACLE_SIGNATURE_THRESHOLD=2
RELAYER_FEE_PERCENT=0.1

# Signer
SOLANA_KEYS=./test/fixtures/signer/solana.keys.json
QUBIC_KEYS=./test/fixtures/signer/qubic.keys.json

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_BPS_FEE=25

# Hub
HUB_URLS=http://127.0.0.1:6101,http://127.0.0.1:6102
HUB_KEYS_FILE=./test/fixtures/hub-keys.json

# Database
SQLITE_DB_FILE=":memory:"
HOST=0.0.0.0
PORT=3000
